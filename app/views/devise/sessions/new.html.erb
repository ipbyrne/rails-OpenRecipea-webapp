<div class="container">  
      <div id="edit_info" style="width: 328px; margin-top:50px;">
        <h2 style="text-align:center;">Sign In</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs" style="text-align:center;">
              <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %>
              <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
              <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-checkbox' } if devise_mapping.rememberable? %>
            </div>
            <br>
            <div class="form-actions" style="text-align:center;">
              <%= f.button :submit, "Log in",  class: 'btn btn-primary'  %>
            </div>
          <% end %>
        <div style="text-align:center;">
          <%= render "devise/shared/links" %>
        </div>
      </div>
</div>
